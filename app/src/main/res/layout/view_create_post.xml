<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<info.jukov.vkstoryteller.surface.PostEditView
		android:id="@+id/postEditView"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<EditText
		android:id="@+id/editTextMessage"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_margin="@dimen/editTextMessageMargin"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		style="@style/EditTextMessage"/>

	<!--FAB лежит внутри FrameLayout для того, чтобы при его масштабировании он оставался в центре.
		Если просто привязать его к bottom с паддингом, он будет смещаться.-->
	<FrameLayout
		android:id="@+id/fabContainer"
		android:layout_width="80dp"
		android:layout_height="80dp"
		app:layout_constraintBottom_toBottomOf="@+id/postEditView"
		app:layout_constraintLeft_toLeftOf="@+id/postEditView"
		app:layout_constraintRight_toRightOf="@+id/postEditView">

		<info.jukov.vkstoryteller.surface.DeleteFloatingActionButton
			android:id="@+id/fabDelete"
			android:layout_width="@dimen/fabSurfaceViewDefaultSize"
			android:layout_height="@dimen/fabSurfaceViewDefaultSize"
			android:layout_gravity="center"
			android:visibility="gone"
			android:scaleType="center"
			tools:visibility="visible"
			style="@style/FabDelete"/>

	</FrameLayout>

</android.support.constraint.ConstraintLayout>