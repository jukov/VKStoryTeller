<resources>

	<!--TODO refactor themes-->
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="FabDelete">
		<item name="backgroundTint">@color/trueWhite</item>
		<item name="srcCompat">@drawable/ic_fab_trash</item>
	</style>

	<style name="EditTextMessage">
		<item name="android:textSize">@dimen/messageTextSize</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textColorHint">@color/blackOpacity24</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center</item>
		<item name="android:hint">@string/messageHint</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:textCursorDrawable">@drawable/transparent_cursor</item>
		<item name="android:maxLines">8</item>
	</style>

	<style name="TabLayout" parent="Widget.Design.TabLayout">
		<item name="tabIndicatorColor">?attr/colorAccent</item>
		<item name="tabTextAppearance">@style/TabLayoutTextApperance</item>
		<item name="tabSelectedTextColor">@color/colorAccent</item>
	</style>

	<style name="TabLayoutTextApperance" parent="TextAppearance.Design.Tab">
		<item name="android:textSize">@dimen/tabTextSize</item>
		<item name="android:textColor">@color/cornflowerBlueOpacity72</item>
	</style>

	<style name="StickerTitle">
		<item name="android:textSize">@dimen/stickerPickerTitleTextSize</item>
		<item name="android:textColor">@color/black</item>
	</style>

</resources>
